// Screen Sizes
$sm = 500px
$md = 800px
$lg = 1025px
$xl = 1360px

*, *:before, *:after
    vendor(box-sizing, border-box)

// force scroll bars
html
  overflow-y: scroll;

::-webkit-scrollbar {
  -webkit-appearance: none;
  width: 7px;
}
::-webkit-scrollbar-thumb {
  border-radius: 4px;
  background-color: rgba(0, 0, 0, .5);
  -webkit-box-shadow: 0 0 1px rgba(255, 255, 255, .5);
}

body
  margin: 0
  max-width: 100%

.wrapper
  padding: 1.25rem
  max-width: 1300px
  margin: auto

/**
 * Add the correct display in IE 9-.
 */

article,
aside,
footer,
header,
nav,
section {
  display: block;
}

